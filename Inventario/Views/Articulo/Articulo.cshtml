
@{
    ViewBag.Title = "Articulo";
}
<!--Titulo-->
<h2>Articulo</h2>
<!-- Color del texto del modal -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- Botón del modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialogo1">REGISTRAR</button>
<div id="accordion"></div>
    <!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="dialogo1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <h1>ARTÍCULO</h1>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <form id="regiration_form" novalidate action="action.php" method="post">
                        <fieldset>
                            <h2>PASO 1</h2>
                            <div class="form-group">
                                <label for="fName">INGRESAR NOMBRE COMERCIAL</label>
                                <input type="text" class="form-control" name="data[fName]" id="fName" placeholder="NOMBRE 1">
                            </div>
                            <div class="form-group">
                                <label for="fName">INGRESAR EL NOMBRE ASIGNADO POR LA EMPRESA</label>
                                <input type="text" class="form-control" name="data[fName]" id="fName" placeholder="UNOMBRE 2">
                            </div>
                            <div class="form-group">
                                <label for="fName">INGRESAR EL ESTADO INICIAL</label>
                                <input type="number" class="form-control" name="data[fName]" id="fName" placeholder="ESTADO INICIAL">
                            </div>
                            <input type="button" name="data[password]" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h2> PASO 2</h2>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">SELESCCIONE LA UNIDAD DE MEDIDA</label>
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>SELECCIONE LA UNIDAD DE MEDIDA</option>
                                    <option>PAQUETE</option>
                                    <option>PIEZA</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="fName">BONIFICACIÓN</label>
                                <input type="text" class="form-control" name="data[fName]" id="fName" placeholder="ESTADO INICIAL">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">SELECCIONE EL ÁREA</label>
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>ÁREA</option>
                                    <option>Sistemas</option>
                                    <option>Mantenimiento</option>
                                    <option>Recursos humanos</option>
                                    <option>Almacén</option>
                                </select>
                            </div>
                            <input type="button" name="previous" class="previous btn btn-default" value="Atras" />
                            <input type="button" name="data[password]" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h2>PASO 3</h2>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">SELECIONE LA MARCA</label>
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>SELECCIONE LA MARCA</option>
                                    <option>-----</option>
                                    <option>----</option>
                                    <option>-----</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">SELECCIONE SU CLASIFICACIÓN</label>
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>SELECCIONE SU CLASIFICACIÓN</option>
                                    <option>-----</option>
                                    <option>----</option>
                                    <option>-----</option>
                                </select>
                            </div>
                            <br>
                            <div id="listas">
                                <label for="fName">DESCRIPCIÓN</label>
                            </div>
                            <input type="button" class="btn btn-primary" id="add_field" value="adicionar">
                            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
                            <input type="submit" name="submit" class="submit btn btn-success" value="Enviar" id="submit_data" />
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!--Hacer que el modal muestre los pasos por parte-->
    <style type="text/css">
        #regiration_form fieldset:not(:first-of-type) {
            display: none;
        }
    </style>
    <!--Script-->
    <script src="~/Scrips/jquery.min.js"></script>  <!--Visualizar el accordion-->
    <!--<script src="~/Scrips/jquery-ui.min.js"></script>-->

    <script src="~/Scrips/Internos/JS_Articulos.js"></script>   <!--Codigo de la funcion para llamar los registros de la base de datos para almacenarlos al accordion-->
    <script src="~/Scrips/js.cookie.js"></script> <!--Recorrer los pasos del modal-->

