
@{
    ViewBag.Title = "UnidadMedida";
}
<center>
    <h2 class="form-control-label" style="font-size: 20px;">
        UNIDADES DE MEDIDA
    </h2>
</center>

<!--Titulo-->
<link href="~/Content/Tabla.css" rel="stylesheet" />
<link href="~/Content/CObligatorios.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!----------------------------------Estilo de las alertas------------------------------------------------------------------------------->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<!-- Botón del modal-->
<button onclick="editarModal(0)" type="button" class="btn btn-success" data-toggle="modal" data-target="#ModalUnidad">REGISTRAR UNIDAD DE MEDIDA</button><!--Mostrar los registros en el accordion-->
<!--Muestra la tabla compras-->
<div id="tablaUnidadMedida" class="default "></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="ModalUnidad">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">REGISTRO DE LAS UNIDADES DE MEDIDA</h4>
                    <button type="button" class="close" data-dismiss="modal"><i class="fas fa-times-circle"></i></button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <form id="regiration_form" novalidate method="post">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtUnidad">Nombre de la unidad de medida<span class="required">*</span></label>
                                        <input id="TxtUnidad" name="data[TxtUnidad]" class="form-control  limpiar ObligatoriosUnidades" placeholder="Metro" size="30" maxlength="100" type="text">
                                    </div>
                                </div>
                            </div>
                            <button id="btnGuardar" type="button" class="btn btn-success " onclick="GuardarUnidadDeMedida()">Guardar</button>
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Script-->
<script src="~/Scrips/jquery.min.js"></script>  <!--Visualizar el accordion-->
<!--<script src="~/Scrips/jquery-ui.min.js"></script>-->
<!--Codigo de la funcion para llamar los registros de la base de datos para almacenarlos al accordion-->
<script src="~/Scrips/Internos/JS_UnidadesDeMedida.js"></script>
<!--Validacion del formulario-->
<script src="~/Scrips/js.cookie.js"></script> <!--Recorrer los pasos del modal-->
