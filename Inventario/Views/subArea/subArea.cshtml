
@{
    ViewBag.Title = "Subarea";
}

<h2>Subarea</h2>
<!-- Color del texto del modal -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<!-- Botón del modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialogo1">REGISTRAR</button>

<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!--Mostrar el accordion-->
<div id="accordion"></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="dialogo1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <h1>SUBÁREAS</h1>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>

                    <form id="regiration_form" novalidate action="action.php" method="post">
                        <fieldset>
                            <h2>Paso 1: Información del subÁrea</h2>
                            <div class="form-group">
                                <label for="nombreSubArea">Nombre del Subárea</label>
                                <input type="text" class="form-control" name="data[nombreSubArea]" id="nombreSubArea" placeholder="Nombre de la SubÁrea">
                            </div>
                            <div class="form-group">
                                <label for="numeroSubArea">Número del Subárea</label>
                                <input type="text" class="form-control" id="numeroSubArea" placeholder="Número del SubArea">
                            </div>
                            <div class="form-group">
                                <label for="nombreUsuario">Nombre del usuario</label>
                                <input type="text" class="form-control" name="data[nombreUsuario]" id="nombreUsuario" placeholder="Nombre del usuario">
                            </div>
                            <div class="form-group">
                                <label for="telefono">Teléfono</label>
                                <input type="text" class="form-control" name="data[telefono]" id="telefono" placeholder="Número telefónico">
                            </div>
                            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h2> Paso 2: Información del usuario</h2>
                            <div class="form-group">
                                <label for="correo">E-mail</label>
                                <input type="email" class="form-control" name="data[correo]" id="correo" placeholder="Correo electrónico">
                            </div>
                            <div class="form-group">
                                <label for="nombreEncargado2">Nombre del encargado 2</label>
                                <input type="text" class="form-control" name="data[nombreEncargado2]" id="nombreEncargado2" placeholder="Nombre del Encargado2">
                            </div>
                            <div class="form-group">
                                <label for="telefonoEncargado2">Teléfono del encargado 2</label>
                                <input type="text" class="form-control" id="telefonoEncargado2" name="data[telefonoEncargado2]" placeholder="Teléfono del Encargado2">
                            </div>
                            <div class="form-group">
                                <label for="correoEncargado2">E-mail del encargado 2</label>
                                <input type="email" class="form-control" name="data[correoEncargado2]" id="correoEncargado2" placeholder="Correo Electrónico">
                            </div>

                            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
                            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h2>Paso 3: Información del encargado</h2>
                            <div class="form-group">
                                <label for="nombreEncargado3">Nombre del encargado 3</label>
                                <input type="text" class="form-control" name="data[nombreEncargado3]" id="nombreEncargado3" placeholder="Nombre del Encargado3">
                            </div>
                            <div class="form-group">
                                <label for="telefonoEncargado3">Teléfono del encargado 3</label>
                                <input type="text" class="form-control" id="telefonoEncargado3" name="data[telefonoEncargado3]" placeholder="Teléfono del Encargado3">
                            </div>
                            <div class="form-group">
                                <label for="correoEncargado3">E-mail del encargado 3</label>
                                <input type="email" class="form-control" name="data[correoEncargado3]" id="correoEncargado3" placeholder="Correo Electrónico">
                            </div>
                            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
                            <input type="submit" name="submit" class="submit btn btn-success" value="Enviar" id="submit_data" />
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Hacer que el modal muestre los pasos por parte-->
<style type="text/css">
    #regiration_form fieldset:not(:first-of-type) {
        display: none;
    }
</style>
<!--Script-->
<script src="~/Scrips/jquery.min.js"></script>  <!--Visualizar el accordion-->
<!--<script src="~/Scrips/jquery-ui.min.js"></script>-->
<script src="~/Scrips/js.cookie.js"></script> <!--Recorrer los pasos del modal-->