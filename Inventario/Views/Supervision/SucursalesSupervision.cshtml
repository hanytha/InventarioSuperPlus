<div id="accordion"></div>

<div class="accordion" id="AcordeonSucursales">
    @{
        if (TiendasSupervision.IDTienda != null)
        {
            int NSucursales = TiendasSupervision.IDTienda.Count();

            string InsrtClases = "card m-b-0";
            for (int i = 0; i < NSucursales; i++)
            {
                if (i == 0)
                {
                    InsrtClases = "card m-b-0";
                }
                else
                {
                    InsrtClases = "card m-b-0  border-top";
                }
                string Colapse = "Accordion" + @TiendasSupervision.IDTienda[i];
                string titulo = "titulo" + @TiendasSupervision.IDTienda[i];
                string contenedor1 = "contenedor1" + @TiendasSupervision.IDTienda[i];
                <div class="@InsrtClases">
                    <div class="card-header" id="@titulo">
                        <h4 class="mb-0">
                            <a onclick="ConsultaArticuloComp(@TiendasSupervision.IDTienda[i])" data-toggle="collapse" data-target="#@Colapse" aria-expanded="false" aria-controls="@Colapse" class="collapsed">
                                <i class="m-r-5 mdi mdi-store" aria-hidden="true"></i>
                                <span>@TiendasSupervision.Nombre[i]</span>
                            </a>
                        </h4>
                        <div id="@Colapse" class="collapse" aria-labelledby="headingOne" data-parent="#AcordeonSucursales" style="">
                            <div class="card-body">
                                <h5>Información de la @TiendasSupervision.Nombre[i]</h5>
                                <!--Mostrar la tabla de los articulos por tienda en el accordion-->
                                <div class="row">
                                    <div id="@contenedor1" class="col-md-12 col-sm-12 col-xs-12">No hay ningún registro</div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    }
</div>

