                                        <input id="TxtDireccionWeB" name="data[TxtDireccionWeB]" class="form-control limpiar obligatorio" placeholder="Dirección Web" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtDato1">Dato 1</label>
                                        <input id="TxtDato1" name="data[TxtDato1]" class="form-control limpiar obligatorio" placeholder="Dato 1" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtDato2">Dato 2</label>
                                        <input id="TxtDato2" name="data[TxtDato2]" class="form-control limpiar obligatorio" placeholder="Dato 2" type="text">
                                    </div>
                                </div>
                            </div>

                            <input type="button" name="previous" class="previous btn btn-default" value="Atrás" />
                            <input type="button" name="next" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h4>Paso 5</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtDato3">Dato 3</label>
                                        <input id="TxtDato3" name="data[TxtDato3]" class="form-control limpiar obligatorio" placeholder="Dato 3" type="text">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtDato4">Dato 4</label>
                                        <input id="TxtDato4" name="data[TxtDato4]" class="form-control limpiar obligatorio" placeholder="Dato 4" type="text">
                                    </div>
                                </div>
                            </div>
                            <input type="button" name="previous" class="previous btn btn-default" value="Atrás" />
                            <button id="btnGuardar" type="button" class="btn btn-success " onclick=" GuardarUsuario()">Guardar</button>
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
