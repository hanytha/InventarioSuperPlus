                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtLogo">Texto del Logo<span class="required">*</span></label>
                                        <input id="TxtLogo" name="data[TxtLogo]" class="form-control  limpiar obligatorio" placeholder="Texto del Logo" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtSerCorreo">SerCorreo</label>
                                        <input id="TxtSerCorreo" name="data[TxtSerCorreo]" class="form-control limpiar obligatorio" placeholder="SerCorreo" type="text">
                                    </div>
                                </div>
