                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtVisión">Visión<span class="required">*</span></label>
                                        <input id="TxtVisión" name="data[TxtMisión]" class="form-control  limpiar obligatorio" placeholder="Misión" size="30" maxlength="500" type="text">
