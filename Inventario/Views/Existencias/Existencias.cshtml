<!--Termina tarjeta-->
<!-- Botón del modal -->
<button onclick="abrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialogo1">REGISTRAR</button>
<!--Mostrar los registros en el accordion-->
<div id="accordion"></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="dialogo1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <h4>REGISTRAR EXISTENCIAS</h4>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <form id="regiration_form" novalidate  method="post">
                        <fieldset>
                            <h4>Paso 1</h4>
                            <div class="form-group">
                                <label for="TxtNuCompra">Número de compra</label>
                                <input type="text" class="form-control limpiar obligatorio" name="data[TxtNuCompra]" id="TxtNuCompra" placeholder="Número Inicial">
                            </div>
                            <div class="form-group">
                                <label for="TxtExistenciaInicial">Existencia Inicial</label>
                                <input type="text" class="form-control limpiar obligatorio" name="data[TxtExistenciaInicial]" id="TxtExistenciaInicial" placeholder="Existencia inicial">
                            </div>
                            <div class="form-group">
                                <label for="TxtExistenciaActual">Existencia actual</label>
                                <input type="text" class="form-control limpiar obligatorio" id="TxtExistenciaActual" name="data[TxtExistenciaActual]" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label for="TxtTipoDeExistencia">Tipo de Existencia</label>
                                <input type="text" class="form-control limpiar obligatorio" id="TxtTipoDeExistencia" name="data[TxtTipoDeExistencia]" placeholder="Tipo de Existencia">
                            </div>
                            <input type="button" class="next btn btn-info" value="Siguiente" />
                        </fieldset>
                        <fieldset>
                            <h4>Paso 2</h4>
                            <div class="form-group">
                                <label for="TxtCosto">Costo</label>
                                <input type="text" class="form-control" id="TxtCosto limpiar obligatorio" name="data[TxtCosto]" placeholder="Número Telefónico">
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="PBFoto">Seleccione el logo</label>
                                        <img id="PBFoto" src="~/Assets/Imagenes/logo.jpg" width="200" height="200" alt="" />

                                        <input id="BtnFoto" type="file" class="form-control form-control-sm limpiar" value="SUBIR" />
                                    </div>
                                </div>
                            </div>
                            <input type="button" name="previous" class="previous btn btn-default" value="Previo" />
                            <button type="button" class="btn btn-success" onclick="GuardarExistencia()">Guardar</button>
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Hacer que el modal muestre los pasos por parte-->
<style type="text/css">
    #regiration_form fieldset:not(:first-of-type) {
        display: none;
    }
</style>
