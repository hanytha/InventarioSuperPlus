<!--Termina tarjeta-->
<!-- Botón del modal-->
<button onclick="abrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalSystem_Perfil">REGISTRAR</button>
<div id="Paginas_Perfiles"></div>
<!-- Rellenar los registros de la base de datos en el accordión -->
<div id="accordion"></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="ModalSystem_Perfil">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">

                    <div align="center">  <h1>Registro de perfiles</h1></div>


                    <form id="regiration_form" novalidate method="post" onsubmit="return validarFormulario()">
                        <!-----formulario-->
                        <div class="row ">
                            <div class="col-md-6 col-sm-12 col-xs-8 justify-content-end">
                                <span class="help-block text-muted small-font">Nivel</span>
                                <input type="number" id="TxtNivel" class="form-control limpiar PerfilObligatorio" placeholder="##" />
                            </div>
                            <div class="col-md-6 col-sm-12 col-xs-12 justify-content-end">
                                <span class="help-block text-muted small-font">Perfil</span>
                                <input type="text" id="TxtPerfil" class="form-control limpiar PerfilObligatorio" placeholder="Nombre del perfil" />
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end">
                                <span class="help-block text-muted small-font">Permisos</span>
                                <div id="TblPaginas">Se inserta una tabla con las páginas ya agregadas a la BD</div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end">
                                <span class="help-block text-muted small-font">Descripción</span>
                                <textarea type="text" id="TxtComentarios" class="form-control limpiar" rows="3" wrap="soft" placeholder="Inserte una breve descripción del perfil."></textarea>
                            </div>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button id="btnGuardar" type="button" class="btn btn-success" onclick="GuardarPerfil()">GUARDAR</button>
                            <button id="btnCancelarPerfil" type="button" class="btn btn-danger" data-dismiss="modal">CANCELAR</button>
                        </div>
                    </form>
                </div>
                <!-- pie del diálogo -->
                <div class="modal-footer">
                    <button id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Hacer que el modal muestre los pasos por parte-->
<style type="text/css">
    #regiration_form fieldset:not(:first-of-type) {
        display: none;
    }
</style>
