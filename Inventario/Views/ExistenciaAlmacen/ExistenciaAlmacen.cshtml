<!-- Botón del modal-->
<button onclick="abrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialogo1">REGISTRAR</button>
<!--Mostrar los registros en el accordion-->
<div id="tabla" class="default "></div>
<div id="TablaExistencia"></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="dialogo1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <label class="form-control-label" style="font-size: 18px;">
                            REGISTRO DE ALMACEN GENERAL
                        </label>
                    </h2>
                    <button type="button" class="close" data-dismiss="modal"><i class="fas fa-times-circle" style="font-size: 25px; color: red;"></i></button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">

                    <form id="regiration_form" novalidate method="post" onsubmit="return validarFormulario()">
                        <fieldset>

                            <!--Insertar fecha-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtFechaSistema">Fecha de Ingreso<span>*</span></label>
                                        <input type="text" id="TxtFechaSistema" class="form-control bloquear" name="data[TxtFechaSistema]" size="25" maxlength="100">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtNumCompra">Número de pedido<span class="required">*</span></label>
                                        <input type="number" name="data[TxtNumCompra]" id="TxtNumCompra" class="form-control  limpiar obligatorio" placeholder="1">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                             
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtNumCompraProv">Número de pedido por proveedor<span class="required">*</span></label>
                                        <input type="number" name="data[TxtNumCompraProv]" id="TxtNumCompraProv" class="form-control  limpiar obligatorio" placeholder="1">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="cmbProveedor">Proveedor<span>*</span></label>
                                        <select id="cmbProveedor" onchange="MostrarArticulos(this.value)" style="width: 100%" class="form-control limpiarSelect">
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @*<div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="cmbArticulo">Artículo<span>*</span></label>
                    <select id="cmbArticulo" style="width: 100%" class="form-control limpiarSelect">
                    </select>
                </div>
            </div>*@

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtExistenciaInicial">Existencia Inicial<span class="required">*</span></label>
                                        <input type="number" name="data[TxtExistenciaInicial]" id="TxtExistenciaInicial" class="form-control  limpiar obligatorio" placeholder="88">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtExistenciaActual">Cantidad<span class="required">*</span></label>
                                        <input type="number" name="data[TxtExistenciaActual]" id="TxtExistenciaActual" class="form-control  limpiar obligatorio" placeholder="88">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtCosto">Costo<span class="required">*</span></label>
                                        <input type="number" name="data[TxtCosto]" id="TxtCosto" class="form-control  limpiar obligatorio" placeholder="88">
                                    </div>
                                </div>
                            </div>
                            @*<div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label" for="TxtExistenciaActual">Existencia actual<span class="required">*</span></label>
                    <input type="number" name="data[TxtExistenciaActual]" id="TxtExistenciaActual" class="form-control  limpiar obligatorio" placeholder="88">
                </div>
            </div>
        </div>*@
                            @*<div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtTipoOperacion">Tipo de Operación<span class="required">*</span></label>
                                        <input type="text" name="data[TxtTipoOperacion]" id="TxtTipoOperacion" class="form-control  limpiar obligatorio" placeholder="Bonificación">
                                    </div>
                                </div>
                            </div>*@
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="cmbAsignacion">Asignación<span class="required">*</span></label>
                                        <select id="cmbAsignacion" style="width: 100%" class="form-control limpiarSelect obligatorio">
                                            <option value="0">--Seleccione--</option>
                                            <option value="1">Oficina</option>
                                            <option value="2">Tienda</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="cmbSitio">Sitio<span class="required">*</span></label>
                                        <select id="cmbSitio" style="width: 100%" class="form-control limpiarSelect obligatorio">
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TblArticulos">Artículo(s)<span class="required">*</span></label>
                                        <div id="TblArticulos">Artículo(s) del proveedor</div>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary" onclick="GuardarCompra()">Guardar</button>
                        </fieldset>
                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
