<!--------------------------------------------MODAL COMPRA-------------------------------------------------------------->
<!-- Botón del modal-->
<button onclick="editarModalCompra(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCompra">REGISTRAR COMPRA</button><!--Mostrar los registros en el accordion-->
<!--Muestra la tabla compras-->
<div id="tablaCompra" class="table "></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="ModalCompra">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <h4>REGISTRO COMPRA</h4>

                    <form id="regiration_form" novalidate method="post">

                        <!--Los pasos del modal-->
                        <h4>PASO 1</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="TxtMetodoDePago">Método de pago<span class="required">*</span></label>
                                    <input id="TxtMetodoDePago" name="data[TxtMetodoDePago]" class="form-control  limpiar obligatoriox" placeholder="Nombre" size="30" maxlength="100" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="cmbImpuesto">Seleccione el tipo de impuesto<span class="required">*</span></label>
                                    <select id="cmbImpuesto" style="width: 100%" class="form-control limpiarSelect obligatorio"></select>
                                </div>
                            </div>
                        </div>
                        <button id="btnGuardar" type="button" class="btn btn-success " onclick="GuardarCompra()">Guardar</button>

                    </form>
                </div>
                <!-- pie del modal-->
                <div class="modal-footer">
                    <button type="button" id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!------------------------------------------------------------Modal impuesto--------------------------------------------------------------------------->
<!-- Botón del modal-->
<button onclick="editarModalImpuestos(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalImpuesto">REGISTRAR IMPUESTO</button><!--Mostrar los registros en el accordion-->
<!--Muestra la tabla compras-->
<div id="tablaImpuesto" class="table"></div>
<!-- Encabezado del Modal -->
<div class="container">
    <div class="modal fade" id="ModalImpuesto">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" >x</button>
                </div>
                <!-- Contenido del modal -->
                <div class="modal-body">
                    <h4>REGISTRO DE IMPUESTOS</h4>
                    <form id="regiration_form" novalidate method="post">
                            <h4>Paso 1</h4>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtImpuesto">Impuesto:<span class="required">*</span></label>
                                        <input type="text" name="data[TxtImpuesto]" id="TxtImpuesto" class="form-control  limpiar ObligatoriosImpuestos" placeholder="name@example.com">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="TxtPorcentaje">Porcentaje:<span class="required">*</span></label>
                                        <input type="text" name="data[TxtPorcentaje]" id="TxtPorcentaje" class="form-control  limpiar ObligatoriosImpuestos" placeholder="Razón Social">
                                    </div>
                                </div>
                            </div>
                            <button id="btnGuardar" type="button" class="btn btn-success " onclick="GuardarImpuesto()">Guardar</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
